{
    "name": "inspection-server",
    "version": "1.0.0",
    "description": "Inspection Server Application",
    "author": "Tharles de Sousa Andrade <irtharles@gmail.com> (https://github.com/L2jLiga)",
    "license": "MIT",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "clear": "kill -9 $(lsof -t -i:5000)",
        "dev": "npx prisma generate && tsc && npx nodemon --watch src dist/index.js",
        "migrate": "npx prisma migrate dev",
        "test-api": "cross-env-shell curl http://localhost:3000/$ROUTE",
        "start": "node dist/index.js",
        "test": "tap"
    },
    "dependencies": {
        "@prisma/client": "^3.9.1",
        "dotenv": "^16.0.0",
        "fastify": "^3.7.0",
        "fastify-cors": "^6.0.2",
        "fastify-decorators": "^3.10.0",
        "fastify-plugin": "^3.0.1",
        "fastify-static": "^4.5.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/node": "^14.18.10",
        "cross-env": "^7.0.3",
        "nodemon": "^2.0.15",
        "prisma": "^3.9.1",
        "tap": "^15.1.6",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-config-standard-plus": "^2.3.0",
        "typescript": "^4.0.5"
    },
    "engines": {
        "node": ">=12.2.0"
    },
    "nodemonConfig": {
        "ignore": [
            "test/*",
            "docs/*"
        ],
        "delay": 1000
    }
}
